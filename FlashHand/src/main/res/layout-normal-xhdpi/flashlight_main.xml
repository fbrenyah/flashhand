<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Flash_Main_Activity"
        android:background="@drawable/flash_handle_rev2">

    <ImageView
            android:id="@+id/switch_indicator"
            android:contentDescription="@string/indicatorDescription"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="85dp"
            android:layout_centerHorizontal="true" />

    <ImageView
            android:id="@+id/button_normal"
            android:contentDescription="@string/buttonDescription"
            android:layout_height="85dp"
            android:layout_width="85dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="170dp"/>

</RelativeLayout>
